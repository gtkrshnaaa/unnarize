import "../utils/logger.unna" as log;

// State: report counter
var reportCount = 0;

// Generate report header
function generateReportHeader(title) {
    reportCount = reportCount + 1;
    log.logInfo("Reports", "Generating report: " + title);
    return "=== REPORT #" + reportCount + ": " + title + " ===";
}

// Generate separator
function separator() {
    return "----------------------------------------";
}

// Get report count
function getReportCount() {
    return reportCount;
}

// Format currency
function formatCurrency(amount) {
    return "$" + amount;
}

// Generate summary line
function summaryLine(label, value) {
    return "  " + label + ": " + value;
}
