print("=== Structs ===");

struct Point {
    x;
    y;
}

var p = Point(10, 20);
print("P: " + p.x + ", " + p.y);

p.x = 30;
print("P renamed: " + p.x);

p.y += 5;
print("P moved: " + p.y);

struct Circle {
    center;
    radius;
}

var c = Circle(Point(0, 0), 5);
print("Circle radius: " + c.radius);
print("Circle center: " + c.center.x + ", " + c.center.y);

c.center.x += 100;
print("Circle center moved: " + c.center.x);
