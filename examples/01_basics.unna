print("=== 1. Variables and Types ===");

// Integer
var age = 25;
print("Age: " + age);

// Float
var pi = 3.14159;
print("Pi: " + pi);

// String
var name = "Unnarize";
print("Language: " + name);

// Boolean (New!)
var isFun = true;
var isHard = false;
print("Is Fun? " + isFun);
print("Is Hard? " + isHard);

print("");
print("=== 2. Arithmetic & Logic ===");

var sum = 10 + 20;
var product = 5 * 5;
print("10 + 20 = " + sum);
print("5 * 5 = " + product);

if (isFun) {
    if (isHard == false) {
        print("Logic check: Passed!");
    }
}

print("");
print("=== 3. Control Flow ===");

// If-Else
var score = 85;
if (score >= 90) {
    print("Grade: A");
} else if (score >= 80) {
    print("Grade: B");
} else {
    print("Grade: C");
}

// While Loop
print("Counting down:");
var count = 3;
while (count > 0) {
    print(count);
    count = count - 1;
}
print("Lift off!");

// For Loop
print("For loop:");
for (var i = 0; i < 3; i = i + 1) {
    print("Iteration " + i);
}

print("");
print("=== End of Basics ===");
