// Math utilities module

function sum(arr) {
    var s = 0;
    var i = 0;
    while (i < length(arr)) {
        s = s + arr[i];
        i = i + 1;
    }
    return s;
}

function avg(arr) {
    var n = length(arr);
    if (n == 0) {
        return 0;
    }
    return sum(arr) / n;
}

function factorial(n) {
    if (n <= 1) {
        return 1;
    }
    return n * factorial(n - 1);
}
