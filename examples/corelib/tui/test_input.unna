    print("You selected: " + options[choice]);
} else {
    print("Selection cancelled");
}
print("");

// Test 6: Multiline editor
print("Test 6: Multiline editor");
print("(Arrow keys, Enter for newline, Ctrl+D to save, Esc to cancel)");
var notes = ucoreTui.inputMulti("Notes Editor", 5, "");
